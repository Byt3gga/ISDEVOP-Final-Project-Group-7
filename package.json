{
  "name": "isdevop-final-project-group-7",
  "private": true,
  "workspaces": [
    "packages/*",
    "docusaurus/website",
    "packages/react-error-overlay"
  ],
  "scripts": {
    "build": "cd packages/react-scripts && node bin/react-scripts.js build",
    "start": "cd packages/react-scripts && node bin/react-scripts.js start",
    "postinstall": "npm run build:prod -w react-error-overlay || echo 'react-error-overlay not found'",
    "changelog": "lerna-changelog",
    "create-react-app": "node tasks/cra.js",
    "e2e": "tasks/e2e-simple.sh",
    "e2e:docker": "tasks/local-test.sh",
    "publish": "tasks/publish.sh",
    "screencast": "node ./tasks/screencast.js",
    "screencast:error": "svg-term --cast jyu19xGl88FQ3poMY8Hbmfw8y --out screencast-error.svg --window --at 12000 --no-cursor",
    "alex": "alex .",
    "test": "react-scripts test --env=jsdom",
    "test:ci": "react-scripts test --env=jsdom --testResultsProcessor ./node_modules/jest-junit --coverage --coverageDirectory=coverage",
    "coverage": "react-scripts test --env=jsdom --coverage",
    "eslint": "eslint .",
    "prettier": "prettier .",
    "format": "npm run prettier -- --write",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "alex": "^8.2.0",
    "case-sensitive-paths-webpack-plugin": "^2.4.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.8",
    "eslint": "^8.3.0",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "get-port": "^5.1.1",
    "globby": "^11.0.4",
    "html-webpack-plugin": "^5.6.3",
    "husky": "^4.3.8",
    "jest": "^27.5.1",
    "jest-junit": "^16.0.0",
    "lerna": "^4.0.0",
    "lerna-changelog": "^2.2.0",
    "lint-staged": "^12.1.2",
    "meow": "^9.0.0",
    "mini-css-extract-plugin": "^2.9.2",
    "multimatch": "^5.0.0",
    "prettier": "^2.5.0",
    "puppeteer": "^12.0.1",
    "react-dev-utils": "^12.0.1",
    "strip-ansi": "^6.0.1",
    "svg-term-cli": "^2.1.1",
    "tempy": "^1.0.1",
    "wait-for-localhost": "^3.3.0",
    "web-vitals": "^2.1.2",
    "webpack-dev-server": "^5.1.0",
    "webpack-manifest-plugin": "^5.0.0",
    "workbox-webpack-plugin": "^7.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,yml,yaml,css,scss,ts,tsx,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/build/**",
      "!**/definitionfiles/**",
      "!**/WebWrokers/**",
      "!**/*.mock.ts",
      "!src/setupTests.ts"
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ]
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "output": "coverage/junit.xml",
    "testResultsProcessor": "jest-junit",
    "classNameTemplate": "{classname} - {title}",
    "titleTemplate": "{classname} - {title}",
    "ancestorSeparator": " > ",
    "usePathForSuiteName": "true"
  }
}
